<% if signed_in? %>

	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>

<% else %>

	<div class="center hero-uint">
	  <h1>DebtHacker <br><small>Risk profiles for student borrowers</small></h1>
	  <%= link_to "Get Started", signup_path, class: "btn btn-large btn-primary" %>
	</div>

<% end %>